WindowManager:
    StartScreen:
    PlanningScreen:
    ConfirmsScreen:
    choicemenu:
    decidewalk:
    tutorial:
    UserFeedback:

<RoundedButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (255/255,255/255,255/255,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [20]
            
<StartScreen>
    name: "Menu"

    canvas:
        Color:
            rgba: 0.20, 0.61, 0.40, 0.9
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        id: confirm_login
        bold: True
        text: ""
        font_size: 25
        pos_hint: {'center_x': 0.5, 'center_y': 0.30}
    Label:
        bold: True
        text: "Dog Calendar"
        font_size: 25
        pos_hint: {'center_x': 0.5, 'center_y': 0.75}
    Label:
        bold: True
        text: "Made By Kevin Vervloet"
        font_size: 15
        pos_hint: {'center_x': 0.5, 'center_y': 0.70}
    Image:
        source:'images/dog.png'
        allow_stretch: True
        pos_hint: {'center_x': 0.5, 'center_y': 0.45}
        size_hint_x: 0.35
        size_hint_y: 0.25
    Button:
        on_release:
            app.root.current = "tutorial"
            root.manager.transition.direction = "down"
            root.remove_text()
        background_disabled_normal: str(True)
        size_hint: 0.1,0.06
        pos_hint: {'center_x': 0.1, 'center_y': 0.94}
        background_normal: 'images/Naamloos.png'
        allow_stretch: True

    Button:
        on_release:
            root.gettoken()
        text: "Login"
        color: 0.20, 0.61, 0.40, 0.9
        background_normal: ''
        background_color: 1, 1, 1, 1
        size_hint: 0.2, 0.04
        pos_hint: {'center_x': 0.85, 'center_y': 0.94}
        font_size: 20
        bold: True

    Button:
        on_release:
            root.logout()
        text: "logout"
        color: 0.20, 0.61, 0.40, 0.9
        background_normal: ''
        background_color: 1, 1, 1, 1
        size_hint: 0.2, 0.04
        pos_hint: {'center_x': 0.85, 'center_y': 0.88}
        font_size: 20
        bold: True

    RoundedButton:
        text: "Continue"
        color: 0.20, 0.61, 0.40, 0.9
        size_hint: 0.8, 0.10
        pos_hint: {'center_x': 0.5, 'center_y': 0.08}
        font_size: 20
        bold: True
        on_release:
            app.root.current = "choice"
            root.manager.transition.direction = "left"
            root.remove_text()

<choicemenu>
    name: "choice"
    canvas:
        Color:
            rgba: 0.20, 0.61, 0.40, 0.9
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        text: "How would you like to plan your walk"
        pos_hint: {'center_x': 0.5, 'center_y': 0.70}
        font_size: 20
    RoundedButton:
        text: "Back"
        color: 0.20, 0.61, 0.40, 0.9
        size_hint: 0.4, 0.05
        pos_hint: {'center_x': 0.25, 'center_y': 0.05}
        font_size: 20
        bold: True
        on_release:
            app.root.current = "Menu"
            root.manager.transition.direction = "right"

    Button:
        text: "Plan your own walk"
        size_hint: 0.5, 0.05
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        font_size: 20
        bold: True
        color: 0.20, 0.61, 0.40, 0.9
        background_normal: ''
        background_color: 1, 1, 1, 1
        on_release:
            app.root.current = "decide"
            root.manager.transition.direction = "left"
    Button:
        text: "Let the app decide!"
        size_hint: 0.5, 0.05
        pos_hint: {'center_x': 0.5, 'center_y': 0.35}
        font_size: 20
        bold: True
        color: 0.20, 0.61, 0.40, 0.9
        background_normal: ''
        background_color: 1, 1, 1, 1
        on_release:
            app.root.current = "planner"
            root.manager.transition.direction = "left"

<decidewalk>
    name: "decide"
    canvas:
        Color:
            rgba: 0.20, 0.61, 0.40, 0.9
        Rectangle:
            size: self.size
            pos: self.pos
    Label:

        text: "On what hour do you want to walk?"
        pos_hint: {'center_x': 0.5, 'center_y': 0.70}
        font_size: 20
    Button:
        text: "Select time"
        size_hint: 0.5, 0.08
        pos_hint: {"center_x":0.5, "center_y": 0.55}
        font_size: 20
        bold: True
        on_release: app.show_time_picker()

    RoundedButton:
        text: "Back"
        color: 0.20, 0.61, 0.40, 0.9
        size_hint: 0.4, 0.05
        pos_hint: {'center_x': 0.25, 'center_y': 0.05}
        font_size: 20
        bold: True
        on_release:
            app.root.current = "choice"
            root.manager.transition.direction = "right"
    RoundedButton:
        text: "Submit"
        color: 0.20, 0.61, 0.40, 0.9
        size_hint: 0.4, 0.05
        pos_hint: {'center_x': 0.75, 'center_y': 0.05}
        font_size: 20
        bold: True
        on_press: root.verifyhour()
        on_release:
            root.manager.transition.direction = "left"


<PlanningScreen>
    name: "planner"
    canvas:
        Color:
            rgba: 0.20, 0.61, 0.40, 0.9
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        text: "Fill in the text fields"
        pos_hint: {'center_x': 0.5, 'center_y': 0.70}
        font_size: 25
    Label:
        text: "Walks"
        pos_hint: {'center_x': 0.205, 'center_y': 0.45}
        font_size: 15
    Label:
        text: "Kilometers"
        pos_hint: {'center_x': 0.245, 'center_y': 0.55}
        font_size: 15
    TextInput:
        id: wandeling
        pos_hint: {'center_x': 0.5, 'center_y': 0.40}
        size_hint: 0.7, 0.05
        hint_text: 'How many walks do you want to plan'
        multiline: False
    TextInput:
        id: km
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint: 0.7, 0.05
        hint_text: 'Kilometer for each walk'
        multiline: False
    RoundedButton:
        text: "Back"
        color: 0.20, 0.61, 0.40, 0.9
        size_hint: 0.4, 0.05
        pos_hint: {'center_x': 0.25, 'center_y': 0.05}
        font_size: 20
        bold: True
        on_release:
            app.root.current = "choice"
            root.manager.transition.direction = "right"

    RoundedButton:
        text: "Submit"
        color: 0.20, 0.61, 0.40, 0.9
        size_hint: 0.4, 0.05
        pos_hint: {'center_x': 0.75, 'center_y': 0.05}
        font_size: 20
        bold: True
        on_press: root.verifyinfo()

<ConfirmsScreen>
    name: "confirm"
    canvas:
        Color:
            rgba: 0.20, 0.61, 0.40, 0.9
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        text: "Calendar has been updated!"
        pos_hint: {'center_x': 0.5, 'center_y': 0.60}
        font_size: 20

    RoundedButton:
        text: "Home"
        color: 0.20, 0.61, 0.40, 0.9
        size_hint: 0.8, 0.10
        pos_hint: {'center_x': 0.5, 'center_y': 0.08}
        font_size: 20
        bold: True
        on_release:
            app.root.current = "Menu"
            root.manager.transition.direction = "left"



<tutorial>
    name: "tutorial"
    canvas:
        Color:
            rgba: 0.20, 0.61, 0.40, 0.9
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        bold: True
        text: "Options"
        font_size: 25
        pos_hint: {'center_x': 0.5, 'center_y': 0.85}
    Label:
        id: confirm_options
        bold: True
        text: ""
        font_size: 20
        pos_hint: {'center_x': 0.5, 'center_y': 0.75}
    Label:
        text: "Walked kilometers (default 5)"
        pos_hint: {'center_x': 0.4, 'center_y': 0.60}
        font_size: 15
    TextInput:
        id: kilometers_default
        pos_hint: {'center_x': 0.5, 'center_y': 0.55}
        size_hint: 0.7, 0.05
        hint_text: 'default 5'
        multiline: False
    Label:
        text: "Max walks per insert (experimental version)"
        pos_hint: {'center_x': 0.513, 'center_y': 0.45}
        font_size: 15
    TextInput:
        id: wandelingen_max
        pos_hint: {'center_x': 0.5, 'center_y': 0.40}
        size_hint: 0.7, 0.05
        hint_text: 'default 3'
        multiline: False
    Button:
        text: "Submit changes"
        size_hint: 0.5, 0.05
        pos_hint: {"x":0.25, "y":0.25}
        font_size: 20
        bold: True
        on_press: root.optionvars()
    Button:
        text: "Send Feedback"
        size_hint: 0.5, 0.05
        pos_hint: {"x":0.25, "y":0.15}
        font_size: 20
        bold: True
        on_press: root.wipe_text_2()
        on_release:
            app.root.current = "feedback"
            root.manager.transition.direction = "left"

    RoundedButton:
        text: "Back"
        color: 0.20, 0.61, 0.40, 0.9
        size_hint: 0.4, 0.05
        pos_hint: {'center_x': 0.25, 'center_y': 0.05}
        font_size: 20
        bold: True
        on_press: root.wipe_text_2()
        on_release:
            app.root.current = "Menu"
            root.manager.transition.direction = "up"

<userfeedback>
    name: "feedback"
    canvas:
        Color:
            rgba: 0.20, 0.61, 0.40, 0.9
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        bold: True
        text: "Send feedback"
        font_size: 25
        pos_hint: {'center_x': 0.5, 'center_y': 0.85}
    Label:
        id: confirm_feedback
        bold: True
        text: ""
        font_size: 20
        pos_hint: {'center_x': 0.5, 'center_y': 0.75}
    TextInput:
        id: feedback_text
        pos_hint: {'center_x': 0.5, 'center_y': 0.55}
        size_hint: 0.7, 0.30
        hint_text: 'send your feedback here'
        multiline: True
    Button:
        text: "Submit changes"
        size_hint: 0.5, 0.05
        pos_hint: {"x":0.25, "y":0.10}
        font_size: 20
        bold: True
        on_press: root.sendfeedback()
    RoundedButton:
        text: "Back"
        color: 0.20, 0.61, 0.40, 0.9
        size_hint: 0.4, 0.05
        pos_hint: {'center_x': 0.25, 'center_y': 0.05}
        font_size: 20
        bold: True
        on_press: root.wipe_text()
        on_release:
            app.root.current = "tutorial"
            root.manager.transition.direction = "right"