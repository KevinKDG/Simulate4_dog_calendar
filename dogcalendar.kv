WindowManager:
    StartScreen:
    PlanningScreen:
    ConfirmsScreen:

<RoundedButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (255/255,255/255,255/255,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [40]
            
<StartScreen>
    name: "Menu"

    canvas:
        Color:
            rgba: 0.48, 0.64, 0.87, 0.2
        Rectangle:
            size: self.size
            pos: self.pos

    GridLayout:
        cols: 1
        padding: 30
        spacing: 60


        Label:
            bold: True
            text: "Welcome to Pet Friend"
            font_size: 25
        RoundedButton:
            text: "Continue"
            color: 0.48, 0.64, 0.87, 1
            size_hint: 0.4, 0.20
            pos_hint: {"center_x": 1}
            font_size: 20
            bold: True
            on_release:
                app.root.current = "planner"
                root.manager.transition.direction = "left"

<PlanningScreen>
    name: "planner"
    canvas:
        Color:
            rgba: 0.48, 0.64, 0.87, 0.2
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        text: "Fill in the text fields"
        pos_hint: {'center_x': 0.5, 'center_y': 0.70}
        font_size: 25
    Label:
        text: "Walks"
        pos_hint: {'center_x': 0.205, 'center_y': 0.45}
        font_size: 15
    Label:
        text: "Kilometers"
        pos_hint: {'center_x': 0.245, 'center_y': 0.55}
        font_size: 15
    TextInput:
        id: wandeling
        pos_hint: {'center_x': 0.5, 'center_y': 0.40}
        size_hint: 0.7, 0.05
        hint_text: 'How many walks do you want to plan'
        multiline: False
    TextInput:
        id: km
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint: 0.7, 0.05
        hint_text: 'Kilometer for each walk'
        multiline: False
    Button:
        text: "Back"
        size_hint: 0.5, 0.05
        pos_hint: {"x":0}
        font_size: 20
        bold: True
        on_release:
            app.root.current = "Menu"
            root.manager.transition.direction = "right"

    Button:
        text: "Submit"
        size_hint: 0.5, 0.05
        pos_hint: {"x":0.5}
        font_size: 20
        bold: True
        on_press: root.verifyinfo()
        #on_release:
        #   app.root.current = "confirm"
        #   root.manager.transition.direction = "left"



<ConfirmsScreen>
    name: "confirm"
    canvas:
        Color:
            rgba: 0.48, 0.64, 0.87, 0.2
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        text: "Values succesfully inserted. . ."
        pos_hint: {'center_x': 0.5, 'center_y': 0.60}
        font_size: 20

    Button:
        text: "Home"
        size_hint: 0.5, 0.05
        pos_hint: {"x":0.25, "y":0.10}
        font_size: 20
        bold: True
        on_release:
            app.root.current = "Menu"
            root.manager.transition.direction = "left"



