WindowManager:
    StartScreen:
    PlanningScreen:

<StartScreen>
    name: "StartMenu"

    GridLayout:
        cols: 1
        padding: 30
        spacing: 60


        Label:
            text: "Welcome to Pet Friend"
            font_size: 25
        Button:
            text: "Continue"
            size_hint: 0.3, 0.3
            pos_hint: {"x":0, "top":1}
            font_size: 20
            bold: True
            on_release:
                app.root.current = "planner"
                root.manager.transition.direction = "left"

<PlanningScreen>
    name: "planner"

    GridLayout:
        cols: 2
        padding: 10
        spacing: 1
        Label:
            text: "wandelingen"
            font_size: 20
        Label:
            text: "Aantal Km"
            font_size: 20
        TextInput:
            id: wandeling
            hint_text: 'aantal wandelingen'
            multiline: False
        TextInput:
            id: km
            pos_hint: {'center_x': 0.5, 'center_y': 0.705}
            size_hint: 0.95, 0.5
            hint_text: 'aantal km'
            multiline: False
        Button:
            text: "Back"
            size_hint: 0.3, 0.3
            pos_hint: {"x":0, "top":1}
            font_size: 20
            bold: True
            on_release:
                app.root.current = "StartMenu"
                root.manager.transition.direction = "right"

        Button:
            text: "submit"
            size_hint: 0.3, 0.3
            pos_hint: {"x":0, "top":1}
            font_size: 20
            bold: True
            on_press: root.verifyinfo()



